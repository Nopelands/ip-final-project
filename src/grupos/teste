package programa;
import perfis.*;
import mensagens.*;
import grupos.*;
import conversas.*;

public class Programa {
    public static void main(String[] args) {
        //TODO main
    	CadastroGrupos teste = new CadastroGrupos(new RepositorioGruposLista()); 
		Grupos test1 = new Grupos("Familia", "Galera da farofa", new RepositorioPerfisLista(), null);
		Grupos test2 = new Grupos("Amigos", "Galera do pagode", new RepositorioPerfisLista(), null);
		Grupos test3 = new Grupos("Faculdade", "UFPE", new RepositorioPerfisLista(), null);
		
		System.out.println("\nRepositorio em Array:");
		
		
		try {
            teste.inserir(test1);
            teste.inserir(test2);
            teste.inserir(test3);
            
            teste.procurar("Familia");
            teste.procurar("Amigos");
            teste.atualizarDescricao(test3,"Galera do Cin");
            teste.atualizarNome(test3,"Pavilhao 9");
            System.out.println(teste.checarGrupo("Pavilhao 9"));
            
        } catch (Exception e) {
            e.printStackTrace();
        }
		
	
    }
}
